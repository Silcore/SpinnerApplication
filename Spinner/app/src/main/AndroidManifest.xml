<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.fsu.cs.mobile.spinner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Initial Activity (Login or Register) -->
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Game Activities -->
        <activity android:name=".Game" />
        <activity android:name=".NewGame" />
        <activity android:name=".GameBrowser" />

        <!-- Login/Register Activities -->
        <activity android:name=".MainActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".SignInActivity" />

        <!-- Social Activities -->
        <activity android:name=".ProfileActivity" />
        <activity android:name=".LeaderBoardActivity" />
        <activity android:name=".chatRoomList" />
        <activity android:name=".chatroom"></activity>
    </application>

</manifest>