<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatRoomList">


    <ListView
        android:id="@+id/chatroomListView"
        android:layout_width="386dp"
        android:layout_height="469dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </ListView>

    <EditText
        android:id="@+id/newChatroom"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="@string/type_name_of_chatroom"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="469dp" />

    <Button
        android:id="@+id/addChatroomButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="104dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/newChatroom"
        android:layout_marginEnd="14dp"
        android:background="@drawable/main_button"
        android:text="@string/add_chatroom"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="475dp" />
</RelativeLayout>