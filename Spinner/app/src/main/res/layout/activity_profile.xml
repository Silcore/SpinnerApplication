<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/profileInsertUsername"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="119dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/profileWinsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profileUsernameTV"
        android:layout_alignParentTop="true"
        android:layout_marginTop="199dp"
        android:text="@string/wins"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/profileLossesTV"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignEnd="@+id/profileWinsTV"
        android:layout_centerVertical="true"
        android:text="@string/losses"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="284dp" />

    <TextView
        android:id="@+id/profileTiesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profileWinsTV"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="193dp"
        android:text="@string/ties"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/profileInsertWins"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/profileInsertUsername"
        android:layout_alignTop="@+id/profileWinsTV"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/profileInsertLosses"
        android:layout_width="111dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/profileInsertWins"
        android:layout_alignTop="@+id/profileLossesTV"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/profileInsertTies"
        android:layout_width="106dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/profileInsertUsername"
        android:layout_alignTop="@+id/profileTiesTV"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="349dp" />

    <TextView
        android:id="@+id/profileUsernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileInsertUsername"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:text="Username:"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

</RelativeLayout>