<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/profileInsertUsername"
        android:layout_width="203dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="78dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/profileWinsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/profileInsertUsername"
        android:layout_marginTop="221dp"
        android:text="Wins: "
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/profileLossesTV"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignEnd="@+id/profileWinsTV"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="216dp"
        android:text="Losses:"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="284dp" />

    <TextView
        android:id="@+id/profileTiesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profileWinsTV"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="113dp"
        android:text="Ties:"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/profileInsertWins"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_alignEnd="@+id/profileInsertUsername"
        android:layout_alignTop="@+id/profileWinsTV"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/profileInsertLosses"
        android:layout_width="111dp"
        android:layout_height="28dp"
        android:layout_alignEnd="@+id/profileInsertUsername"
        android:layout_alignTop="@+id/profileLossesTV"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/profileInsertTies"
        android:layout_width="106dp"
        android:layout_height="33dp"
        android:layout_alignEnd="@+id/profileInsertUsername"
        android:layout_alignTop="@+id/profileTiesTV"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="349dp" />

</RelativeLayout>